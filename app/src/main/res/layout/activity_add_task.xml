<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_task"
        android:elevation="@dimen/dp_1"
        android:paddingVertical="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            style="@style/ToolBarButton"
            android:layout_width="?attr/appBarIconSize"
            android:layout_height="?attr/appBarIconSize"
            android:layout_marginStart="@dimen/dp_16"
            app:icon="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_16"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/new_task"
            android:textColor="@color/arsenic"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            style="@style/ToolBarButton"
            android:layout_width="?attr/appBarIconSize"
            android:layout_height="?attr/appBarIconSize"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_16"
            app:icon="@drawable/ic_apply"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout2">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/title"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/bg_solid_white"
                android:hint="Nhập tiêu đề"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_16"
                android:textColor="@color/arsenic"
                android:textColorHint="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/detail_task"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@id/edtTitle" />

            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/bg_solid_white"
                android:fontFamily="sans-serif"
                android:gravity="top"
                android:hint="Nhập mô tả công việc"
                android:inputType="text|textMultiLine"
                android:minHeight="@dimen/dp_102"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/arsenic"
                android:textColorHint="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="Thể loại công việc"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@id/edtDescription" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_8"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:itemCount="10"
                tools:listitem="@layout/item_category" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="Ngày bắt đầu"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@id/rvListCategory" />

            <TextView
                android:id="@+id/tvStartDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@drawable/bg_solid_white"
                android:fontFamily="@font/opensans_medium"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_12"
                android:text="22.12.2023"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:layout_constraintEnd_toStartOf="@+id/gl50"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                android:text="Ngày kết thúc"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/tvEndDay"
                app:layout_constraintTop_toTopOf="@id/textView5" />

            <TextView
                android:id="@+id/tvEndDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/bg_solid_white"
                android:fontFamily="@font/opensans_medium"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_12"
                android:text="22.12.2023"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gl50"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="Thời gian kết thúc"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@id/tvStartDay"
                app:layout_constraintTop_toBottomOf="@id/tvStartDay" />

            <TextView
                android:id="@+id/tvTimeEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_solid_white"
                android:fontFamily="@font/opensans_medium"
                android:gravity="center_horizontal"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_12"
                android:text="17 : 15"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:drawableStartCompat="@drawable/ic_clock"
                app:layout_constraintEnd_toEndOf="@+id/tvStartDay"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                android:text="Thông báo"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/tvEndDay"
                app:layout_constraintTop_toTopOf="@id/textView13" />

            <TextView
                android:id="@+id/tvTimeNotification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_solid_white"
                android:backgroundTint="@color/cultured"
                android:fontFamily="@font/opensans_medium"
                android:gravity="center_horizontal"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_12"
                android:text="@string/pick_time"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/dp_16"
                app:drawableStartCompat="@drawable/ic_clock"
                app:layout_constraintEnd_toEndOf="@+id/tvEndDay"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swcNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                app:layout_constraintEnd_toEndOf="@+id/tvTimeNotification"
                app:layout_constraintTop_toTopOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:text="Tập tin đính kèm"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/tvTimeEnd"
                app:layout_constraintTop_toBottomOf="@id/tvTimeEnd" />

            <TextView
                android:id="@+id/tvAddFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textColor="@color/lynch_gray"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttachList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintEnd_toEndOf="@+id/tvAddFile"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@id/tvAddFile" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:text="Nhiệm vụ phụ"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@id/rvAttachList" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAddSubTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:listitem="@layout/item_sub_task" />

            <TextView
                android:id="@+id/tvAddSubTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textColor="@color/lynch_gray"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

