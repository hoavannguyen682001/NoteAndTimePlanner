<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_task"
        android:elevation="@dimen/dp_1"
        android:paddingVertical="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            style="@style/ToolBarButton"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_16"
            app:icon="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_16"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/new_task"
            android:textColor="@color/arsenic"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            style="@style/ToolBarButton"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_16"
            app:icon="@drawable/ic_apply"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout2">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:background="@drawable/bg_solid_white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_4"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.6">

                <TextView
                    android:id="@+id/tvTaskPersonal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_filter_select"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_8"
                    android:text="Cá Nhân"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvTaskGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_filter_select"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_8"
                    android:text="Dự Án"
                    android:textColor="@color/arsenic" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/title"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout" />

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/bg_solid_white"
                android:hint="Nhập tiêu đề"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_16"
                android:textColor="@color/arsenic"
                android:textColorHint="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/detail_task"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@id/edtTitle" />

            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/bg_solid_white"
                android:fontFamily="sans-serif"
                android:gravity="top"
                android:hint="Nhập mô tả công việc"
                android:inputType="text|textMultiLine"
                android:minHeight="@dimen/dp_102"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/arsenic"
                android:textColorHint="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="Thể loại công việc"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@id/edtDescription" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_8"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:itemCount="10"
                tools:listitem="@layout/item_category" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="Ngày bắt đầu"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@id/rvListCategory" />

            <TextView
                android:id="@+id/tvStartDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@drawable/bg_solid_white"
                android:fontFamily="@font/opensans_medium"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_12"
                android:text="@string/date_selected"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:layout_constraintEnd_toStartOf="@+id/gl50"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                android:text="Ngày kết thúc"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/tvEndDay"
                app:layout_constraintTop_toTopOf="@id/textView5" />

            <TextView
                android:id="@+id/tvEndDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/bg_solid_white"
                android:fontFamily="@font/opensans_medium"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_12"
                android:text="@string/date_selected"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gl50"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:text="Thời gian kết thúc"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@id/tvStartDay"
                app:layout_constraintTop_toBottomOf="@id/tvStartDay" />

            <TextView
                android:id="@+id/tvTimeEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_solid_white"
                android:fontFamily="@font/opensans_medium"
                android:gravity="center_horizontal"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_12"
                android:text="@string/time_picker"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:drawableStartCompat="@drawable/ic_clock"
                app:layout_constraintEnd_toEndOf="@+id/tvStartDay"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                android:text="Nhắc nhở"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/tvEndDay"
                app:layout_constraintTop_toTopOf="@id/textView13" />

            <TextView
                android:id="@+id/tvTimeNotification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_solid_white"
                android:backgroundTint="@color/cultured"
                android:fontFamily="@font/opensans_medium"
                android:gravity="center_horizontal"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_12"
                android:text="@string/pick_time"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/dp_16"
                app:drawableStartCompat="@drawable/ic_clock"
                app:layout_constraintEnd_toEndOf="@+id/tvEndDay"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swcNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                app:layout_constraintEnd_toEndOf="@+id/tvTimeNotification"
                app:layout_constraintTop_toTopOf="@+id/textView15" />

            <TextView
                android:id="@+id/tvMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:visibility="gone"
                android:text="Thành viên"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@id/tvTimeEnd" />

            <TextView
                android:id="@+id/tvAddMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:text="Thêm"
                android:visibility="gone"
                android:textColor="@color/lynch_gray"
                app:layout_constraintBottom_toBottomOf="@+id/tvMember"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvMember" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMember"
                tools:itemCount="1"
                tools:listitem="@layout/item_member" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:drawablePadding="@dimen/dp_10"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:text="Nhiệm vụ phụ"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@id/rvListMember" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAddSubTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:itemCount="1"
                tools:listitem="@layout/item_sub_task" />

            <TextView
                android:id="@+id/tvAddSubTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:text="Thêm"
                android:textColor="@color/lynch_gray"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:text="Tập tin đính kèm"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="@+id/rvAddSubTask"
                app:layout_constraintTop_toBottomOf="@id/rvAddSubTask" />

            <TextView
                android:id="@+id/tvAttachFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:text="Thêm"
                android:textColor="@color/lynch_gray"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttachImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/tvAttachFile"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@id/tvAttachFile"
                tools:itemCount="4"
                tools:listitem="@layout/item_attach_image" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttachFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="?actionBarSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/rvAttachImage"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@id/rvAttachImage"
                tools:itemCount="1"
                tools:listitem="@layout/item_attach_file" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/flImagePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:elevation="@dimen/dp_2"
        android:focusable="true"
        android:visibility="gone">

        <include
            android:id="@+id/layoutPreview"
            layout="@layout/layout_image_preview" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>