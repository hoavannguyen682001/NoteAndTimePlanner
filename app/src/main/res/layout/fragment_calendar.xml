<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_white">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:background="@drawable/bg_header_task"
        android:backgroundTint="@color/aero_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_solid_white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintWidth_percent="0.6">

        <TextView
            android:id="@+id/tvTaskPersonal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_filter_select"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_8"
            android:text="Cá Nhân"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvTaskGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_filter_select"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_8"
            android:text="Dự Án"
            android:textColor="@color/arsenic" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivEmpty"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_300"
        android:scaleType="centerCrop"
        android:src="@drawable/img_empty"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/rvTask"
        app:layout_constraintStart_toStartOf="@id/rvTask"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Không có nhiệm vụ nào trong ngày\n Nhấp + để tạo công việc của bạn."
        android:textColor="@color/arsenic"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivEmpty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivEmpty" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/ghost_white"
        android:paddingHorizontal="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:listitem="@layout/item_task" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListTaskGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:visibility="gone"
        android:background="@color/ghost_white"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:spanCount="2"
        tools:itemCount="3"
        tools:listitem="@layout/item_task_group" />

</androidx.constraintlayout.widget.ConstraintLayout>