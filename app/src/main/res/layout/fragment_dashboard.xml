<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDayQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:elevation="@dimen/dp_2"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/day_quote"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="end|bottom"
            android:src="@drawable/img_dashboard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout11">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cslGroupTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_8"
            android:background="@drawable/bg_solid_white"
            android:backgroundTint="@color/seashell"
            android:elevation="@dimen/dp_1"
            android:maxHeight="@dimen/dp_200"
            android:padding="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="@id/gl50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginVertical="@dimen/dp_8"
                android:background="@drawable/bg_solid_white"
                android:backgroundTint="@color/bittersweet"
                android:src="@drawable/img_group_task"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTaskNumb" />

            <TextView
                android:id="@+id/tvTaskName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_bold"
                android:maxLines="2"
                android:text="Dự án của bạn"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:layout_constraintEnd_toStartOf="@+id/ivNext"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTaskNumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_8"
                android:fontFamily="@font/opensans_bold"
                android:text="15 dự án"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="@+id/tvTaskName"
                app:layout_constraintTop_toBottomOf="@+id/tvTaskName" />

            <ImageView
                android:id="@+id/ivNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_around"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/tvTaskName"
                app:tint="@color/bittersweet" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cslTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/bg_solid_white"
            android:backgroundTint="@color/colorSecondPrimary"
            android:elevation="@dimen/dp_1"
            android:padding="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl50"
            app:layout_constraintTop_toTopOf="@+id/cslGroupTask">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginVertical="@dimen/dp_8"
                android:background="@drawable/bg_solid_white"
                android:backgroundTint="@color/tufts_blue"
                android:src="@drawable/img_task"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTaskNumb1" />

            <TextView
                android:id="@+id/tvTaskName1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_bold"
                android:maxLines="2"
                android:text="Công việc cá nhân"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:layout_constraintEnd_toStartOf="@+id/ivNext1"
                app:layout_constraintStart_toStartOf="@+id/imageView1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTaskNumb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_8"
                android:fontFamily="@font/opensans_bold"
                android:text="15 công việc"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="@+id/tvTaskName1"
                app:layout_constraintTop_toBottomOf="@+id/tvTaskName1" />

            <ImageView
                android:id="@+id/ivNext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_around"
                app:layout_constraintEnd_toEndOf="@+id/imageView1"
                app:layout_constraintTop_toTopOf="@+id/tvTaskName1"
                app:tint="@color/tufts_blue" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cslStatistical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@drawable/bg_solid_white"
            android:backgroundTint="@color/aero_blue"
            android:elevation="@dimen/dp_1"
            android:maxHeight="@dimen/dp_200"
            android:padding="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="@id/cslTask"
            app:layout_constraintStart_toStartOf="@id/cslTask"
            app:layout_constraintTop_toBottomOf="@id/cslTask">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginVertical="@dimen/dp_8"
                android:background="@drawable/bg_solid_white"
                android:backgroundTint="@color/bittersweet"
                android:src="@drawable/img_group_task"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTaskNumb2" />

            <TextView
                android:id="@+id/tvTaskName2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_bold"
                android:maxLines="2"
                android:text="Lịch"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:layout_constraintEnd_toStartOf="@+id/ivNext2"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTaskNumb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_8"
                android:fontFamily="@font/opensans_bold"
                android:text="15 dự án"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="@+id/tvTaskName2"
                app:layout_constraintTop_toBottomOf="@+id/tvTaskName2" />

            <ImageView
                android:id="@+id/ivNext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_around"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/tvTaskName2"
                app:tint="@color/bittersweet" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cslCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@drawable/bg_solid_white"
            android:backgroundTint="@color/magnolia"
            android:elevation="@dimen/dp_1"
            android:padding="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="@id/cslGroupTask"
            app:layout_constraintStart_toStartOf="@id/cslGroupTask"
            app:layout_constraintTop_toBottomOf="@id/cslGroupTask">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginVertical="@dimen/dp_8"
                android:background="@drawable/bg_solid_white"
                android:backgroundTint="@color/light_pastel_purple"
                android:src="@drawable/img_category"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTaskNumb3" />

            <TextView
                android:id="@+id/tvTaskName3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_bold"
                android:maxLines="2"
                android:text="Thể loại công việc"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                app:layout_constraintEnd_toStartOf="@+id/ivNext3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTaskNumb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_8"
                android:fontFamily="@font/opensans_bold"
                android:text="15 công việc"
                android:textColor="@color/arsenic"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="@+id/tvTaskName3"
                app:layout_constraintTop_toBottomOf="@+id/tvTaskName3" />

            <ImageView
                android:id="@+id/ivNext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_around"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/tvTaskName3"
                app:tint="@color/medium_orchid" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>