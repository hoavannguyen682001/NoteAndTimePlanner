<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_solid_white"
    android:paddingHorizontal="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8">

    <TextView
        android:id="@+id/tvFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_medium"
        android:padding="@dimen/dp_8"
        android:text="@string/app_name"
        android:textColor="@color/arsenic"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@id/ivRemoveFile"
        app:layout_constraintEnd_toStartOf="@id/ivRemoveFile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivRemoveFile" />

    <ImageView
        android:id="@+id/ivRemoveFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_8"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_cancel_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>